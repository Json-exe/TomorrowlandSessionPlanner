@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Align="Align.Center" GutterBottom Typo="Typo.h5">Sessions to import</MudText>
        <MudTable Items="NewSessions" Virtualize>
            <HeaderContent>
                <MudTh>DJ Name</MudTh>
                <MudTh>Stage Name</MudTh>
                <MudTh>Start</MudTh>
                <MudTh>End</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="DJ Name">@context.DjName</MudTd>
                <MudTd DataLabel="Stage Name">@context.StageName</MudTd>
                <MudTd DataLabel="Start">@context.StartTime</MudTd>
                <MudTd DataLabel="End">@context.EndTime</MudTd>
            </RowTemplate>
        </MudTable>
        <MudText Align="Align.Center" GutterBottom Typo="Typo.h5">Sessions to update</MudText>
        <MudTable Items="UpdatedSessions" Virtualize>
            <HeaderContent>
                <MudTh>DJ Name</MudTh>
                <MudTh>Stage Name</MudTh>
                <MudTh>Start</MudTh>
                <MudTh>End</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="DJ Name">@context.DjName</MudTd>
                <MudTd DataLabel="Stage Name">@context.StageName</MudTd>
                <MudTd DataLabel="Start">@context.StartTime</MudTd>
                <MudTd DataLabel="End">@context.EndTime</MudTd>
            </RowTemplate>
        </MudTable>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@(() => MudDialog.Close(DialogResult.Ok(true)))">
            Add them!
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="@MudDialog.Cancel">Abort!</MudButton>
    </DialogActions>
</MudDialog>