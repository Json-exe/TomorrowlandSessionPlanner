@page "/summary"
@using TomorrowlandSessionPlanner.Core.Code
@inject PlannerManager PlannerManager
@inject NavigationManager NavigationManager

<PageTitle>Summary</PageTitle>

<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">
    Zusammenfassung deiner Ausgewählten Sessions
</MudText>

<MudGrid Spacing="2" Justify="Justify.Center">
    @foreach (var session in PlannerManager.AddedSessions)
    {
        <SessionCard Class="ml-5 mb-5" Session="session" IsReadonly @key="session.Id"/>
    }
</MudGrid>

<MudGrid Justify="Justify.Center" Class="mb-3">
    <MudButton Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("/"))" Variant="Variant.Filled" 
               Class="mt-3" Color="Color.Info" Style="width: 200px;">Back</MudButton>
    <MudButton Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("/SessionAnalyzer"))" 
               Variant="Variant.Filled" Class="mt-3 ml-2" Color="Color.Info" Style="width: 200px;">Next</MudButton>
</MudGrid>