@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Justify="Justify.Center" Spacing="2" Style="padding: 8px;">
            <MudText Typo="Typo.h4">Create a new Session</MudText>
            <MudAutocomplete T="string" ResetValueOnEmptyText Clearable ValueChanged="DjChanged" Required 
                             Variant="Variant.Outlined" Label="Select a DJ" SearchFunc="@DjSearch"/>
            <MudSelect Required @bind-Value="@_selectedStage" Variant="Variant.Outlined" Label="Select a Stage" Clearable>
                @foreach (var item in Stages)
                {
                    <MudSelectItem Value="@item.Id">@item.Name</MudSelectItem>
                }
            </MudSelect>
            <MudGrid>
                <MudItem xs="6">
                    <MudDatePicker @bind-Date="@_startDate" Editable Required Variant="Variant.Outlined" Clearable 
                                   Label="Select a start date"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTimePicker @bind-Time="@_startTime" Editable Required Label="Select a start time" 
                                   Variant="Variant.Outlined" Clearable/>
                </MudItem>
                <MudItem xs="6">
                    <MudDatePicker @bind-Date="@_endDate" Editable Required Variant="Variant.Outlined" Clearable 
                                   Label="Select a end date"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTimePicker @bind-Time="@_endTime" Editable Required Label="Select a end time" Clearable 
                                   Variant="Variant.Outlined"/>
                </MudItem>
            </MudGrid>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="@Submit">Save</MudButton>
    </DialogActions>
</MudDialog>